CREATE TABLE auteurs(
    id int PRIMARY KEY AUTO_INCREMENT,
    nom VARCHAR(20) NOT NULL,
    nationalité VARCHAR(20)
)ENGINE=INNODB;

CREATE TABLE Livres(
    id int PRIMARY KEY AUTO_INCREMENT,
    titre VARCHAR(20) NOT NULL,
    prix FLOAT NOT NULL,
    date_publication VARCHAR(15),
    auteur_id int,
    FOREIGN KEY(auteur_id) REFERENCES auteurs(id)
)ENGINE=INNODB;


