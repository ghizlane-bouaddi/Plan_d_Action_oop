SELECT livres.titre , auteurs.nom FROM auteurs JOIN livres ON livres.auteur_id = auteurs.id;

SELECT AVG(prix) FROM livres;

SELECT auteurs.nom ,count(livres.id) FROM auteurs join livres ON livres.auteur_id = auteurs.id GROUP BY auteurs.nationalité;

